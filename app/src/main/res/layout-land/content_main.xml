<?xml version="1.0" encoding="utf-8"?><!-- это макет для альбомной ориентации -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Фрагмент с выбором городов -->

        <fragment
            android:id="@+id/cities"
            android:name="com.android.lesson6.CitiesFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    <!-- Здесь будет герб выбранного города -->

    <FrameLayout
        android:id="@+id/coat_of_arms"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/detailsElementBackground">

        <Button
            android:id="@+id/button_add_note"
            android:layout_width="@dimen/size_button_add_note"
            android:layout_height="@dimen/size_button_add_note"
            android:textSize="@dimen/text_size_button_add_note"
            android:text="@string/button_add_message"
            android:layout_gravity="bottom|end"
            />
    </FrameLayout>


</LinearLayout>

